<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ggeoga_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-꺽어치기 정석 1-"
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/ggeoga_title1_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 수구와 제1적구의 위치변화"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_below="@+id/ggeoga_title1"
            android:layout_alignStart="@+id/ggeoga_title1" />

        <Button
            android:id="@+id/coursebook_ggeoga_button_1"
            android:layout_below="@id/ggeoga_title1_explain"
            android:layout_alignStart="@id/ggeoga_title1_explain"
            android:layout_marginTop="50dp"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:background="#00ffffff"
            android:onClick="CourseBook_ggeoga_wide"/>
        <ImageView
            android:layout_alignTop="@id/coursebook_ggeoga_button_1"
            android:layout_alignStart="@id/coursebook_ggeoga_button_1"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:src="@drawable/h1_noline"/>

        <Button
            android:id="@+id/coursebook_ggeoga_button_2"
            android:layout_alignTop="@id/coursebook_ggeoga_button_1"
            android:layout_toRightOf="@id/coursebook_ggeoga_button_1"
            android:layout_marginLeft="20dp"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:background="#00ffffff"
            android:onClick="CourseBook_ggeoga_wide"/>
        <ImageView
            android:layout_alignTop="@id/coursebook_ggeoga_button_2"
            android:layout_alignLeft="@id/coursebook_ggeoga_button_2"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:src="@drawable/h2_noline"/>

        </RelativeLayout>
</LinearLayout>