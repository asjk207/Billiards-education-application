<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_nologo"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingBottom="30dp"
    android:paddingTop="30dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/result_board">

        <ImageView
        android:id="@+id/win_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/win_icon"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/win_white"
            android:layout_alignTop="@+id/win_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/win_icon"
            android:layout_marginLeft="443dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/result_inning_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ffffffff"
            android:textSize="30dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="87dp"/>

        <TextView
            android:id="@+id/result_inning_white"
            android:layout_toRightOf="@+id/result_inning_yellow"
            android:layout_alignTop="@+id/result_inning_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ffffffff"
            android:textSize="30dp"
            android:layout_marginLeft="163dp" />

        <TextView
            android:id="@+id/result_score_yellow"
            android:layout_alignLeft="@+id/result_inning_yellow"
            android:layout_below="@+id/result_inning_yellow"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ffffffff"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/result_score_white"
            android:layout_alignLeft="@+id/result_inning_white"
            android:layout_below="@+id/result_inning_white"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ffffffff"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/result_nohit_yellow"
            android:layout_alignLeft="@+id/result_inning_yellow"
            android:layout_below="@+id/result_score_yellow"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ffffffff"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/result_nohit_white"
            android:layout_alignLeft="@+id/result_inning_white"
            android:layout_below="@+id/result_score_white"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ffffffff"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/result_highrun_yellow"
            android:layout_alignLeft="@+id/result_score_yellow"
            android:layout_below="@+id/result_nohit_yellow"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ffffffff"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/result_highrun_white"
            android:layout_alignLeft="@+id/result_score_white"
            android:layout_below="@+id/result_nohit_white"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ffffffff"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/result_average_yellow"
            android:layout_alignLeft="@+id/result_score_yellow"
            android:layout_below="@+id/result_highrun_yellow"
            android:layout_marginTop="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ffffffff"
            android:textSize="30dp"
            android:textStyle="normal"
            android:maxLength="4"/>

        <TextView
            android:id="@+id/result_average_white"
            android:layout_alignLeft="@+id/result_score_white"
            android:layout_below="@+id/result_highrun_white"
            android:layout_marginTop="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ffffffff"
            android:textSize="30dp"
            android:textStyle="normal"
            android:maxLength="4"/>

    </RelativeLayout>

</LinearLayout>