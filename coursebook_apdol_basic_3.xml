<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/apdol_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-앞돌리기 정석 3-"
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/coursebook_apdol_button_5"/>
        <TextView
            android:id="@+id/apdol_title3_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="앞돌리기를 이용한 대회전"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_below="@+id/apdol_title3"
            android:layout_alignStart="@+id/apdol_title3" />

        <Button
            android:id="@+id/coursebook_apdol_button_6"
            android:layout_below="@id/apdol_title3_explain"
            android:layout_alignStart="@id/apdol_title3_explain"
            android:layout_marginTop="50dp"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:background="#00ffffff"
            android:onClick="CourseBook_apdol_wide"/>
        <ImageView
            android:layout_alignTop="@id/coursebook_apdol_button_6"
            android:layout_alignLeft="@id/coursebook_apdol_button_6"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:src="@drawable/f6_noline"/>

        <Button
            android:id="@+id/coursebook_apdol_button_7"
            android:layout_alignTop="@id/coursebook_apdol_button_6"
            android:layout_toRightOf="@id/coursebook_apdol_button_6"
            android:layout_marginLeft="20dp"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:background="#00ffffff"
            android:onClick="CourseBook_apdol_wide"/>
        <ImageView
            android:layout_alignTop="@id/coursebook_apdol_button_7"
            android:layout_alignLeft="@id/coursebook_apdol_button_7"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:src="@drawable/f7_noline"/>

        <TextView
            android:id="@+id/apdol_title4_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="1적구가 쿠션에 붙은 경우"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_below="@+id/coursebook_apdol_button_6"
            android:layout_alignStart="@+id/coursebook_apdol_button_6" />

        <Button
            android:id="@+id/coursebook_apdol_button_8"
            android:layout_below="@id/apdol_title4_explain"
            android:layout_alignStart="@id/apdol_title4_explain"
            android:layout_marginTop="50dp"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:background="#00ffffff"
            android:onClick="CourseBook_apdol_wide"/>
        <ImageView
            android:layout_alignTop="@id/coursebook_apdol_button_8"
            android:layout_alignLeft="@id/coursebook_apdol_button_8"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:src="@drawable/f8_noline"/>

        <Button
            android:id="@+id/coursebook_apdol_button_9"
            android:layout_alignTop="@id/coursebook_apdol_button_8"
            android:layout_toRightOf="@id/coursebook_apdol_button_8"
            android:layout_marginLeft="20dp"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:background="#00ffffff"
            android:onClick="CourseBook_apdol_wide"/>
        <ImageView
            android:layout_alignTop="@id/coursebook_apdol_button_9"
            android:layout_alignStart="@id/coursebook_apdol_button_9"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:src="@drawable/f9_noline"/>
        </RelativeLayout>
</LinearLayout>