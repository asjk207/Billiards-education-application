<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FF000000">

    <view
        android:id="@+id/CorrectView"
        android:layout_width="190dp"
        android:layout_height="350dp"
        class="com.example.user.billardtrainningapplication.CorrectView"
        android:layout_alignParentLeft="true" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp">
        <ImageSwitcher
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/correct_imageswitcher">
        </ImageSwitcher>
    </FrameLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="두께 : "
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="#ffffffff"/>
        <TextView
            android:id="@+id/correct_thick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textStyle="bold"
            android:textColor="#ffffffff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="당점/팁 : "
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="#ffffffff"/>
            <TextView
                android:id="@+id/corrct_pointntip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="#ffffffff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스트로크 : "
                android:textSize="7dp"
                android:textStyle="bold"
                android:textColor="#ffffffff"/>
            <TextView
                android:id="@+id/correct_strock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="7dp"
                android:textStyle="bold"
                android:textColor="#ffffffff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal">

        <Button
            android:background="#FF000000"
            android:layout_height="wrap_content"
            android:layout_width="70dp"
            android:id="@+id/correct_check"
            android:layout_marginTop="180dp"
            android:text="확인"
            android:onClick="onClick"/>

    </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>