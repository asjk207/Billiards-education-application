<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:padding="15dp">

    <FrameLayout
        android:id="@+id/point_frame_layout"
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/yellowball1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="49dp"
            android:src="@drawable/yellowball_thick"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/yellowball2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="64dp"
            android:src="@drawable/yellowball_thick"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/yellowball3"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="80dp"
            android:src="@drawable/yellowball_thick"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/yellowball4"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="95dp"
            android:src="@drawable/yellowball_thick"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/yellowball5"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="110dp"
            android:src="@drawable/yellowball_thick"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/yellowball6"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="125dp"
            android:src="@drawable/yellowball_thick"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/yellowball7"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="140dp"
            android:src="@drawable/yellowball_thick"
            android:visibility="invisible"/>
        <ImageSwitcher
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/point_imageswitcher0">
        </ImageSwitcher>
        <ImageSwitcher
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="155dp"
            android:id="@+id/point_imageswitcher1">
        </ImageSwitcher>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:text="1시방향"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clockButton1"
                    android:visibility="visible"
                    android:onClick="onClicked"/>

                <RadioButton
                    android:text="2시방향"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clockButton2"
                    android:visibility="visible"
                    android:onClick="onClicked"/>

                <RadioButton
                    android:text="3시방향"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clockButton3"
                    android:onClick="onClicked"/>

                <RadioButton
                    android:text="4시방향"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clockButton4"
                    android:onClick="onClicked"/>

                <RadioButton
                    android:text="5시방향"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clockButton5"
                    android:onClick="onClicked"/>

                <RadioButton
                    android:text="6시방향"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clockButton6"
                    android:onClick="onClicked"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:text="7시방향"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clockButton7"
                    android:onClick="onClicked"/>
                <RadioButton
                    android:text="8시방향"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clockButton8"
                    android:onClick="onClicked"/>
                <RadioButton
                    android:text="9시방향"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clockButton9"
                    android:onClick="onClicked"/>
                <RadioButton
                    android:text="10시방향"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clockButton10"
                    android:onClick="onClicked"/>
                <RadioButton
                    android:text="11시방향"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clockButton11"
                    android:onClick="onClicked"/>
                <RadioButton
                    android:text="12시방향"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clockButton12"
                    android:onClick="onClicked"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@drawable/verticalline"/>
        </RadioGroup>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_marginRight="20dp">

            <RadioButton
                android:text="0팁"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tipButtonno"
                android:visibility="visible"
                android:onClick="onClicks"/>

            <RadioButton
                android:text="1팁"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tipButton1"
                android:visibility="visible"
                android:onClick="onClicks"/>

            <RadioButton
                android:text="2팁"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tipButton2"
                android:visibility="visible"
                android:onClick="onClicks"/>

            <RadioButton
                android:text="3팁"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tipButton3"
                android:onClick="onClicks"/>

            <RadioButton
                android:text="4팁"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tipButton4"
                android:onClick="onClicks"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:text="확인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/p_checkbutton"
            android:layout_gravity="center"
            android:background="#FF000000"
            android:onClick="onClick"/>
    </LinearLayout>

</LinearLayout>