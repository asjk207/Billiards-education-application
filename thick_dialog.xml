<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#FF000000">

    <FrameLayout
        android:layout_width="280dp"
        android:layout_height="130dp"
        android:orientation="horizontal">
        <ImageSwitcher
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/thick_imageswticher">
        </ImageSwitcher>
    </FrameLayout>


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:checkedButton="@+id/btn_dog">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <RadioButton
                android:text="왼쪽 1/8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton1"
                android:onClick="onClick" />

            <RadioButton
                android:text="왼쪽 2/8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2"
                android:onClick="onClick"/>

            <RadioButton
                android:text="왼쪽 3/8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton3"
                android:onClick="onClick"/>

            <RadioButton
                android:text="왼쪽 4/8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton4"
                android:onClick="onClick"/>

            <RadioButton
                android:text="왼쪽 5/8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton5"
                android:onClick="onClick"/>

            <RadioButton
                android:text="왼쪽 6/8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton6"
                android:onClick="onClick"/>

            <RadioButton
                android:text="왼쪽 7/8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton7"
                android:onClick="onClick"/>
            </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
            <RadioButton
                android:text="오른쪽 1/8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton1R"
                android:onClick="onClick"/>

            <RadioButton
                android:text="오른쪽 2/8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2R"
                android:onClick="onClick"/>

            <RadioButton
                android:text="오른쪽 3/8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton3R"
                android:onClick="onClick"/>

            <RadioButton
                android:text="오른쪽 4/8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton4R"
                android:onClick="onClick"/>

            <RadioButton
                android:text="오른쪽 5/8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton5R"
                android:onClick="onClick"/>

            <RadioButton
                android:text="오른쪽 6/8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton6R"
                android:onClick="onClick"/>

            <RadioButton
                android:text="오른쪽 7/8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton7R"
                android:onClick="onClick"/>
</LinearLayout>
</RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:text="확인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbutton"
            android:layout_gravity="center"
            android:background="#FF000000"
            android:onClick="onClick" />
    </LinearLayout>

</LinearLayout>