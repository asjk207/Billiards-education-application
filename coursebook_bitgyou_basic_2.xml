<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bitgyou_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-빗겨치기 정석 2-"
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/coursebook_bitgyou_button_1"/>
        <TextView
            android:id="@+id/bitgyou_title2_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수구의 위치 변화"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_below="@+id/bitgyou_title2"
            android:layout_alignStart="@+id/bitgyou_title2" />

        <Button
            android:id="@+id/coursebook_bitgyou_button_4"
            android:layout_below="@id/bitgyou_title2_explain"
            android:layout_alignStart="@id/bitgyou_title2_explain"
            android:layout_marginTop="50dp"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:background="#00ffffff"
            android:onClick="CourseBook_bitgyou_wide"/>
        <ImageView
            android:layout_alignTop="@id/coursebook_bitgyou_button_4"
            android:layout_alignLeft="@id/coursebook_bitgyou_button_4"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:src="@drawable/cut4_noline"/>


        <Button
            android:id="@+id/coursebook_bitgyou_button_5"
            android:layout_toRightOf="@id/coursebook_bitgyou_button_4"
            android:layout_alignTop="@id/coursebook_bitgyou_button_4"
            android:layout_marginLeft="20dp"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:background="#00ffffff"
            android:onClick="CourseBook_bitgyou_wide"/>
        <ImageView
            android:layout_alignTop="@id/coursebook_bitgyou_button_5"
            android:layout_alignStart="@id/coursebook_bitgyou_button_5"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:src="@drawable/cut5_noline"/>

    </RelativeLayout>
</LinearLayout>